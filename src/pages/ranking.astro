---
// ================================================
// src/pages/ranking.astro
// ================================================
import MainLayout from "../components/layout/MainLayout.astro";
import FifaRankingTable from "../components/ranking/FifaRankingTable";
---

<MainLayout title="Ranking FIFA – Mundial 2026">
  <section class="mt-4 md:mt-6 space-y-4">
    <header class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-950/90 via-slate-900 to-slate-950 px-4 py-4 md:px-6 md:py-5 shadow-lg">
      <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
        <div>
          <p class="text-[11px] uppercase tracking-[0.18em] text-yellow-300 mb-1">
            Dashboard de potencia
          </p>
          <h1 class="font-bebas text-3xl md:text-4xl text-white tracking-[0.22em]">
            Ranking FIFA de selecciones
          </h1>
          <p class="mt-1 text-xs md:text-sm text-slate-300 max-w-2xl">
            Usa esta tabla como referencia para entender qué selecciones llegan como
            favoritas al Mundial 2026. El ranking se integra con tus predicciones de
            grupos y llaves para que tengas un contexto más completo.
          </p>
        </div>

        <div class="flex items-center gap-2 mt-2 md:mt-0">
          <span class="inline-flex items-center gap-1.5 rounded-full border border-emerald-400/60 bg-emerald-500/10 px-3 py-1.5">
            <span class="inline-block h-2 w-2 rounded-full bg-emerald-400 animate-pulse"></span>
            <span class="text-[11px] md:text-xs font-semibold text-emerald-200">
              Datos de ranking activos
            </span>
          </span>
        </div>
      </div>
    </header>

    <FifaRankingTable client:load />
  </section>
</MainLayout>
